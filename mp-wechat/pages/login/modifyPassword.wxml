<view class="box">
    <view class="login">
        <van-cell-group>
            <van-field value="{{ password }}" type="password" label="原密码" placeholder="请输入原密码" required
                       border="{{ false }}"    bind:input="onPasswordInput"/>
            <van-field value="{{ newPassword }}" type="password" label="新密码" placeholder="请输入新密码" required
                       border="{{ false }}"    bind:input="onNewPasswordInput"/>
            <van-field value="{{ repassword }}" type="password" label="再次密码" placeholder="请再次输入新密码" required
                       border="{{ false }}"    bind:input="onRepasswordInput"/>
        </van-cell-group>
        <view class="my-login-wrap">
            <van-button style="margin-left:20rpx;" plain size="small" type="primary" bind:click="modifyPassword">修改密码</van-button>
            <van-button style="margin-left:20rpx;" plain size="small"  bind:click="back">返回</van-button>
        </view>
    </view>
</view>
